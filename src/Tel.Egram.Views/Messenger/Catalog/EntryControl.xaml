<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="clr-namespace:Tel.Egram.Views.Shared"
    xmlns:entries="clr-namespace:Tel.Egran.ViewModels.Messaging.Catalog.Entries;assembly=Tel.Egran.ViewModels"
    x:Class="Tel.Egram.Views.Messenger.Catalog.EntryControl">
    
    <Design.DataContext>
        <entries:EntryViewModel />
    </Design.DataContext>

    <Grid
        ColumnDefinitions="auto,*,auto">
        
        <Border
            Grid.ColumnSpan="3" />
        
        <shared:AvatarControl
            DataContext="{Binding Avatar}"
            Grid.Row="0"
            Grid.Column="0"
            Source="{Binding Bitmap}"
            Color="{Binding Color}"
            TextColor="{Binding TextColor}"
            Text="{Binding Label}"
            Size="24"
            Margin="3,0,0,0"/>

        <Panel
            Classes="Title"
            Grid.Column="1"
            Height="24"
            VerticalAlignment="Center">

            <TextBlock
                Text="{Binding Title}"
                TextWrapping="NoWrap"
                VerticalAlignment="Center" />

        </Panel>
        
        <Panel
            Classes="Indicator"
            Grid.Column="2"
            Height="24"
            VerticalAlignment="Center">
            
            <Border
                IsVisible="{Binding HasUnread}">
                
                <TextBlock
                    Text="{Binding UnreadCount}"
                    VerticalAlignment="Center" />
                
            </Border>
            
        </Panel>

    </Grid>
    
</UserControl>